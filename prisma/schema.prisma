datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Broth {
  id              Int   @id @default(autoincrement())
  name            String
  imageInactive   String
  imageActive     String
  description     String
  price           Float
  orders          Order[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("broths")
}

model Protein {
  id              Int   @id @default(autoincrement())
  name            String
  imageInactive   String
  imageActive     String
  description     String
  price           Float
  orders          Order[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("proteins")
}

model Order {
  id              Int   @id @default(autoincrement())
  image           String
  description     String
  broth           Broth @relation(fields: [brothId], references: [id])
  brothId         Int
  protein         Protein @relation(fields: [proteinId], references: [id])
  proteinId       Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("orders")
}